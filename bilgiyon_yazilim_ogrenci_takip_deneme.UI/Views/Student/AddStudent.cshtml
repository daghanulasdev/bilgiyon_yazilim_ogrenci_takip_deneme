@model bilgiyon_yazilim_ogrenci_takip_deneme.EntityLayer.Concrete.Student
@{
    ViewData["Title"] = "AddStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ogrenci Ekleme Sayfasi</h1>
<br />
@using (Html.BeginForm("AddStudent", "Student", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Ogrenci Adi")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <br /> <br />
        @Html.Label("Ogrenci Soyadi")
        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
        <br /> <br />
        @Html.Label("Ogrenci Telefonu")
        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
        <br /> <br />
        @Html.Label("Ogrenci Adresi ")
        @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
        <br /> <br />
        @Html.Label("Ogrenci Sinifi")
        @Html.TextBoxFor(x => x.Class, new { @class = "form-control" })
        <br /> <br />
        <button class="btn btn-info">Kaydet</button>
    </div>
}

